<h1>Hi, <%= current_user.first_name if current_user%></h1>
<h2>HomePage</h2>

<h3>Blog Posts</h3>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |blog| %>
    <tr>
      <td><%= blog.title.upcase %></td>
      <td><%= blog.body %></td>
    </tr>
  </tbody>
<% end %>
</table>
