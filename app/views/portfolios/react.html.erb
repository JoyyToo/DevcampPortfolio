<h1>ReactJS Portfolio Items</h1>

<%= link_to "Create New Portfolio Item", new_portfolio_path if logged_in?(:site_admin) %> <!--new_portfolio_path is a route prefix-->

<% @react_portfolio_items.each do |portfolio| %>
  <h2><%= link_to portfolio.title, portfolio_show_path(portfolio) %></h2>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>

  <%= link_to "Edit", edit_portfolio_path(portfolio) if logged_in?(:site_admin) %>
  <%= link_to "Delete", portfolio_path(portfolio), method: :delete, data: {confirm: 'Are you sure?'} if logged_in?(:site_admin) %>
<% end %>
