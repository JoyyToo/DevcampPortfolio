<h1>Portfolio Items</h1>

<%= link_to "Create New Portfolio Item", new_portfolio_path %> <!--new_portfolio_path is a route prefix-->

<% @portfolio_items.each do |portfolio| %>
  <h2><%=link_to portfolio.title, portfolio_path(portfolio) %></h2>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>

  <%= link_to "Edit", edit_portfolio_path(portfolio) %>
<% end %>
