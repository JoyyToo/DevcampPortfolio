<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio.id %>">

    <%= image_tag portfolio.thumb_image, width: '100%' %>

    <div class="card-body">
      <p class="card-text">
        <span><%=link_to portfolio.title, portfolio_show_path(portfolio) %></span>
        <%= portfolio.subtitle %>
      </p>
    </div>

  </div>
</div>
